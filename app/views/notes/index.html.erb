<div class="wrapper_with_padding">
 <div id="notes" class="clearfix">
  <% unless @sise.blank? %>
    
    <% @sise.each do |sisa| %>
    
      <a href="<%= (url_for [sisa] ) %>">
       <div class="note">
        <p class="title">
          <%= sisa.title %>
        </p>
       
        <p class="date"><%= time_ago_in_words(sisa.created_at) %></p>
       </div>
       </a>
  
<% end %>

<% else %>
 <h2>Add a Note</h2>
  <p>It appears you haven't created any notes yet... Lets fix that. Why don't you go ahead and create a new note.</p>
  <button>
     <%= link_to "New Note", new_note_path %>
  </button>
  <% end %>
 </div>

</div>

